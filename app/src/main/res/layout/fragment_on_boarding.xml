<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".onboarding.OnBoardingFragment">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_onboarding"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="33dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_onboarding_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dotsIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:dotsColor="@color/roof_main3"
            app:dotsCornerRadius="10dp"
            app:dotsSize="10dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="4"
            app:layout_constraintBottom_toTopOf="@id/btn_onboarding_next"
            app:layout_constraintEnd_toEndOf="@+id/btn_onboarding_next"
            app:layout_constraintStart_toStartOf="@+id/btn_onboarding_next"
            app:selectedDotColor="@color/roof_main" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_onboarding_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="다음"
            android:background="@drawable/bg_r20_main2"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:textSize="15dp"
            android:includeFontPadding="false"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>